<%= turbo_frame_tag quote do %>
  <div class="flex justify-between items-center gap-2 rounded-md shadow mb-4 p-2 md:px-4 md:py-1.5">
    <%= link_to quote.name,
                quote_path(quote),
                data: { turbo_frame: "_top" },
                class: "flex-1 text-rose-500" %>

    <div class="flex flex-none self-start gap-2">
      <%= button_to "Delete",
                    quote_path(quote),
                    method: :delete,
                    class: "inline-block px-4 py-1.5 rounded-md bg-origin-border border-solid border-2 border-transparent font-bold transition text-neutral-800 bg-neutral-200" %>

      <%= link_to "Edit",
                  edit_quote_path(quote),
                  class: "inline-block px-4 py-1.5 rounded-md bg-origin-border border-solid border-2 border-transparent font-bold transition text-neutral-800 bg-neutral-200" %>
    </div>
  </div>
<% end %>
