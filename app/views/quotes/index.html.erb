<%= turbo_stream_from "quotes" %>

<div class="flex flex-wrap gap-3 justify-between mt-4 mb-6 md:mb-8">
  <h1 class="text-3xl">Quotes</h1>
  <%= link_to "New quote",
              new_quote_path,
              data: { turbo_frame: dom_id(Quote.new) },
              class: "inline-block px-4 py-1.5 rounded-md bg-origin-border border-solid border-2 border-transparent font-bold transition text-white bg-gradient-to-r from-rose-500 to-pink-600" %>
</div>

<%= turbo_frame_tag Quote.new %>

<%= turbo_frame_tag "quotes" do %>
  <%= render @quotes %>
<% end %>
